<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/holo_blue_light"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        app:srcCompat="@android:color/black" />

    <ImageButton
        android:id="@+id/ibvLike"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivUserImage" />

    <ImageButton
        android:id="@+id/ibvComment"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivUserImage"
        android:layout_toEndOf="@+id/ibvLike"
        android:src=""/>

    <ImageButton
        android:id="@+id/ibvShare"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivUserImage"
        android:layout_toEndOf="@+id/ibvComment" />

    <ImageButton
        android:id="@+id/ibvSave"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivUserImage" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibvLike"
        android:text="TextView" />
</RelativeLayout>