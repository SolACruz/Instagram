<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/ivProfileImage2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/holo_blue_light"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvUsername2"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivProfileImage2"
        android:text="TextView"
        android:layout_alignLeft="@+id/ivProfileImage2"
        android:layout_marginLeft="55dp"/>

    <ImageView
        android:id="@+id/ivUserImage2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage2"
        android:layout_marginTop="5dp"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/ivLike2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivUserImage2"
        android:layout_marginStart="14dp"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/ivComment2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivUserImage2"
        android:layout_toEndOf="@+id/ivProfileImage2"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivShare2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivUserImage2"
        android:layout_marginStart="101dp"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/ivSave2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivUserImage2"
        app:srcCompat="@drawable/ufi_save" />


    <TextView
        android:id="@+id/tvDescription2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/ivLike"/>

    <TextView
        android:id="@+id/tvDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage2"
        android:layout_alignStart="@+id/tvUsername2"
        android:text="TextView"
        android:layout_alignLeft="@+id/ivProfileImage2"
        android:layout_marginLeft="5dp"/>
</RelativeLayout>